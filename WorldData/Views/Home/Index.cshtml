@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
    <h1>Welcome to Data from Around the World!</h1>
  </div>
  <div class="row">
    <form class="form" action="/results" method="post">
      <div class="col-lg-6">
        <div class="form-group">
          <h3>Filter Country Data</h3>
          <label for="life">How old would you like to live to?</label>
          <input type="number" name="life">
          <div class="form-check">
            <input type="radio" name="order" value="asc">
            <label for="order">Sort in ascending order</label>
          </div>
          <div class="form-check">
            <input type="radio" name="order" value="desc">
            <label for="order">Sort in descending order</label>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <h3>Filter City Data</h3>
          <select class="form-control">
            <option value="Name">Name</option>
            <option value="Country">Country</option>
            <option value="Population">Population</option>
          </select>
          <div class="form-check">
            <input type="radio" name="order" value="asc">
            <label for="order">Sort in ascending order</label>
          </div>
          <div class="form-check">
            <input type="radio" name="order" value="desc">
            <label for="order">Sort in descending order</label>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-alert" name="button">Click</button>
    </form>
  </div>
</div>
